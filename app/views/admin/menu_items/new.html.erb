<div class="admin-content">
  <div class="admin-header">
    <h2>Ajouter un nouveau plat</h2>
    <%= link_to "← Retour au menu", restaurant_admin_menu_items_path(restaurant_slug: params[:restaurant_slug]), class: "btn btn-outline" %>
  </div>

  <div class="form-container">
    <%= form_with model: @menu_item, url: restaurant_admin_menu_items_path(restaurant_slug: params[:restaurant_slug]), local: true, class: "admin-form" do |form| %>
      <%= render 'form', form: form %>
    <% end %>
  </div>
</div>