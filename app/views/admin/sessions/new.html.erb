<div class="login-container">
  <div class="login-card">
    <h2>Connexion Administration</h2>

    <%= form_with url: admin_login_path, local: true, class: "login-form" do |form| %>
      <div class="form-group">
        <%= form.label :email, "Email", class: "form-label" %>
        <%= form.email_field :email, class: "form-input", required: true %>
      </div>

      <div class="form-group">
        <%= form.label :password, "Mot de passe", class: "form-label" %>
        <%= form.password_field :password, class: "form-input", required: true %>
      </div>

      <div class="form-actions">
        <%= form.submit "Se connecter", class: "btn btn-primary btn-full" %>
      </div>
    <% end %>

    <div class="login-footer">
      <%= link_to "← Retour au menu", root_path, class: "link-secondary" %>
    </div>
  </div>
</div>