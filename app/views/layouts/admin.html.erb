<!DOCTYPE html>
<html>
  <head>
    <title>Administration - La Bonne Cuisine</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Source+Sans+Pro:wght@300;400;600&display=swap" rel="stylesheet">
  </head>

  <body class="admin-body">
    <nav class="admin-nav">
      <div class="nav-content">
        <h1>Administration - La Bonne Cuisine</h1>
        <% if admin_logged_in? %>
          <div class="nav-actions">
            <%= link_to "Voir le menu public", root_path, class: "btn btn-outline", target: "_blank" %>
            <%= button_to "DÃ©connexion", restaurant_admin_logout_path(restaurant_slug: params[:restaurant_slug]), method: :delete, class: "btn btn-danger", form: { style: "display: inline-block;" } %>
          </div>
        <% end %>
      </div>
    </nav>

    <% if admin_logged_in? %>
      <% current_slug = @restaurant&.slug || params[:restaurant_slug] %>
      <% if current_slug.present? %>
        <div class="admin-tabs" role="navigation" aria-label="Navigation administration">
          <%= link_to "Menu", restaurant_admin_menu_items_path(restaurant_slug: current_slug),
                      class: "admin-tab #{'active' if controller_path == 'admin/menu_items'}" %>
          <%= link_to "Mise en page", restaurant_admin_layout_path(restaurant_slug: current_slug),
                      class: "admin-tab #{'active' if controller_path == 'admin/layouts'}" %>
        </div>
      <% end %>
    <% end %>

    <main class="admin-main">
      <% if notice %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>

      <% if alert %>
        <div class="alert alert-error"><%= alert %></div>
      <% end %>

      <%= yield %>
    </main>
  </body>
</html>
