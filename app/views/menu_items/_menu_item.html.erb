<% layout_settings ||= { image_size: 'small', grid_columns: 3, display_style: 'classic' } %>
<% display_style = layout_settings[:display_style].presence || 'classic' %>
<% item_partial =
     case display_style
     when 'showcase' then 'menu_items/menu_item_showcase'
     else 'menu_items/menu_item_classic'
     end %>

<%= render partial: item_partial,
           locals: { menu_item: menu_item, layout_settings: layout_settings } %>
