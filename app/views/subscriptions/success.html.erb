<div class="subscription-result">
  <h1><%= t('subscriptions.success.heading') %></h1>
  <p><%= t('subscriptions.success.body') %></p>

  <% if @subscription&.email.present? %>
    <p class="subscription-result__email">Confirmation sent to <strong><%= @subscription.email %></strong></p>
  <% end %>

  <%= link_to 'Back to menu', restaurant_menu_path(restaurant_slug: params[:restaurant_slug]), class: 'subscription-result__back-link' %>
</div>
