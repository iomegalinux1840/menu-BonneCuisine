<% pricing_table_enabled = ENV['STRIPE_PRICING_TABLE_ENABLED'].to_s.casecmp('true').zero? %>
<% display_style = menu_layout[:display_style].presence || 'classic' %>

<% layout_locals = {
     menu_items: menu_items,
     menu_layout: menu_layout,
     pricing_table_enabled: pricing_table_enabled
   } %>

<% if display_style == 'showcase' %>
  <%= render partial: "public_menus/showcase_layout", locals: layout_locals %>
<% else %>
  <%= render partial: "public_menus/classic_layout", locals: layout_locals %>
<% end %>
